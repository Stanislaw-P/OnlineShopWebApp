@model UserAccount

<div class="row">
	<div class="col-3">
		@await Html.PartialAsync("AdminNav")
	</div>
	<div class="col-9">
		<form method="post">
			<table class="table">
				<tr>
					<td class="text-secondary">Имя:</td>
					<td>@Model.Name</td>
				</tr>
				<tr>
					<td class="text-secondary">Фамилия:</td>
					<td>@Model.Surname</td>
				</tr>
				<tr>
					<td class="text-secondary">Email (логин):</td>
					<td>@Model.Email</td>
				</tr>
				<tr>
					<td class="text-secondary">Телефон:</td>
					<td>@Model.Phone</td>
				</tr>
			</table>
			<button type="submit" data-bs-toggle="dropdown" aria-expanded="false" class="btn btn-outline-primary dropdown-toggle">Действия</button>
			<ul class="dropdown-menu">
				<li><a class="dropdown-item" asp-area="Admin" asp-controller="User" asp-action="ChangePassword" asp-route-email="@Model.Email">Смена пароля</a></li>
				<li><a class="dropdown-item" asp-area="Admin" asp-controller="User" asp-action="Edit" asp-route-id="@Model.Id">Редактирование данных</a></li>
				<li><a class="dropdown-item" asp-area="Admin" asp-controller="User" asp-action="#" asp-route-email="@Model.Email">Права доступа</a></li>
				<li><a class="dropdown-item" asp-area="Admin" asp-controller="User" asp-action="Remove" asp-route-email="@Model.Email">Удаление пользователя</a></li>
			</ul>
		</form>
	</div>
</div>