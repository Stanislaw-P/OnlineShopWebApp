@model List<UserAccount>

<div class="row">
	<div class="col-3">
		@await Html.PartialAsync("AdminNav")
	</div>
	<div class="col-9 card">
		<h3>Список пользователей</h3>
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Email (логин)</th>
					<th>Имя</th>
					<th>Фамилия</th>
					<th>Телефон</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var user in Model)
				{
					<tr>
						<td>@user.Email</td>
						<td>@user.Name</td>
						<td>@user.Surname</td>
						<td>@user.Phone</td>
					</tr>
				}
			</tbody>
		</table>
		<a asp-area="Admin" asp-controller="User" asp-action="Add" class="btn btn-primary w-25" role="button"> Добавить пользователя</a>
	</div>
</div>