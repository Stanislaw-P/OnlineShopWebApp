@model List<Role>

<div class="row">
	<div class="col-3">
		@await Html.PartialAsync("AdminNav")
	</div>
	<div class="col-9">
		<h3>Список ролей</h3>
		<table class="table table-striped">
			<thead>
				<tr>
					<th>№</th>
					<th>Название</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@for (int i = 0; i < Model.Count; i++)
				{
					<tr>
						<td>@(i+1)</td>
						<td>@Model[i].Name</td>
						<td><a asp-area="Admin" asp-controller="Role" asp-action="Remove" asp-route-roleName="@Model[i].Name">Удалить</a></td>
					</tr>
				}
			</tbody>
		</table>
		<a asp-area="Admin" asp-controller="Role" asp-action="Add" class="btn btn-success" role="button">Добавить роль</a>
	</div>
</div>