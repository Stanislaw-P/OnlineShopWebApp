@model Role

<div class="row">
	<div class="col-3">
		@await Html.PartialAsync("AdminNav")
	</div>
	<div class="col-9">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="mb-3">
				<label asp-for="Name">Название:</label>
				<input type="text" asp-for="Name" class="form-control"/>
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<button type="submit" class="btn btn-success" asp-area="Admin" asp-controller="Role" asp-action="Add">Добавить</button>
		</form>
	</div>
</div>