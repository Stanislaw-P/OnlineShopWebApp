@model Register

<div class="row">
	<div class="col-md-5 mx-auto">
		<div class="card">
			<h3 class="text-center">Регистрация</h3>
			<form method="post" class="card-body d-flex flex-column align-items-center">
				<div class="validation" asp-validation-summary="ModelOnly"></div>
				<div class="mb-3 col-md-9">
					<label asp-for="UserName">Имя:</label>
					<input class="form-control" asp-for="UserName" />
					<span asp-validation-for="UserName" class="text-danger"></span>
				</div>

				<div class="mb-3 col-md-9">
					<label asp-for="Password">Пароль:</label>
					<input type="password" class="form-control" asp-for="Password" />
					<span asp-validation-for="Password" class="text-danger"></span>
				</div>

				<div class="mb-3 col-md-9">
					<label asp-for="ConfirmPassword">Подтвердите пароль:</label>
					<input type="password" class="form-control" asp-for="ConfirmPassword" />
					<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
				</div>
				<button type="submit" class="w-75" asp-controller="account" asp-action="register">Зарегестрироваться</button>
				<a href="/account/login" class="text-secondary">Аккаунт уже есть</a>
			</form>
		</div>
	</div>
</div>

