@model List<Product>

@{
	ViewData["Title"] = "Домашняя страница";
}

<div class="row">
	<div class="col-lg-3">
		<div class="list-group my-4">
			<a href="#" class="list-group-item list-group-item-action active list-group-item-danger" aria-current="true">
				Текущий элемент ссылка
			</a>
			<a href="#" class="list-group-item list-group-item-action">Второй элемент ссылка</a>
			<a href="#" class="list-group-item list-group-item-action">Третий элемент ссылка</a>
			<a href="#" class="list-group-item list-group-item-action">Четвертый элемент ссылка</a>
			<a class="list-group-item list-group-item-action disabled">Отключенный элемент ссылка</a>
		</div>
	</div>
	<div class="col-lg-9">
		<div id="carouselExampleIndicators" class="carousel slide my-4" data-bs-ride="carousel">
			<div class="carousel-indicators">
				<button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
				<button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
				<button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
			</div>
			<div class="carousel-inner">
				<div class="carousel-item active">
					<img src="/images/promo slide 1.png" class="d-block img-fluid" alt="Первое предложение">
				</div>
				<div class="carousel-item">
					<img src="/images/promo slide 2.png" class="d-block img-fluid" alt="Второе предложение">
				</div>
				<div class="carousel-item">
					<img src="/images/promo slide 3.png" class="d-block img-fluid" alt="Третье предложение">
				</div>
			</div>
			<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Предыдущий</span>
			</button>
			<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Следующий</span>
			</button>
		</div>

		<div class="row">
			@foreach (var product in Model)
			{
				<div class="col-lg-4 col-md-6 mb-4">
					<div class="card h-100 box-shadow">
						<a asp-area="" asp-controller="product" asp-action="index" asp-route-productId="@product.Id">
							<img class="card-img-top" src="@product.ImagePath" alt="Картинка товара">
						</a>
						<div class="card-body">
							<h4 class="card-title">
								<a style="color:black" asp-area="" asp-controller="product" asp-action="index" asp-route-productId="@product.Id">
									@product.Name
								</a>
							</h4>
							<h5>@product.Cost &#8381;</h5>
						</div>
						<div class="card-body d-flex align-items-end justify-content-between">
							<a class="btn btn-dark w-50" asp-area="" asp-controller="cart" asp-action="add" asp-route-productId="@product.Id">В корзину</a>
							<a class="btn" asp-area="" asp-controller="wishlist" asp-action="add" asp-route-productId="@product.Id"><img src="/images/favorite-white.png" alt="Лайк" /></a>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</div>